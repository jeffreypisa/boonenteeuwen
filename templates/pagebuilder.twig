  {% elseif item.acf_fc_layout == 'content' %}
		{% include 'pagebuilder/content.twig' %}
		
	{% elseif item.acf_fc_layout == 'projecten' %}
		{% include 'pagebuilder/projecten.twig' %}

  {% endif %}
  
{% endfor %}